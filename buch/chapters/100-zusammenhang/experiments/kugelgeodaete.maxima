theta: acos(s * sin(t));

phi: acos(cos(t) / sin(theta));

thetadot:  trigsimp(diff(theta, t));
thetaddot: trigsimp(diff(thetadot, t));

phidot:  trigsimp(ratsimp(diff(phi, t)));
phiddot: trigsimp(ratsimp(diff(phidot, t)));

etheta: thetaddot + sin(theta) * cos(theta) * phidot^2;
trigsimp(ratsimp(etheta));

ephi:   phiddot - cot(theta) * thetadot * phidot;
trigsimp(ratsimp(ephi));

